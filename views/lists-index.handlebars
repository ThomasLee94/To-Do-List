

<div class="container-fluid">
      {{!-- List preview bar --}}
      <div class="row">
        <div class="col-lg-4" style="background:white;">
            
            <h1>Lists</h1>
            {{> new-list-button}}

            {{#if lists}}
                <ul class="flex-column" id="todo-list">
                {{#each lists}}
                    <div class="card" >
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Date and time</h6>
                            <p class="card-text">{{this.body}}</p>
                        </div>
                    </div>
                {{/each}}
                </ul>
                
            {{else}}
    
                <h1>No lists, add something!</h1>
            {{/if}}
        </div>

        {{!-- List write bar --}}
        <div class="col-lg-8" style="background: gray;">
          {{> list-form}}
        </div>
      </div>
    </div>
