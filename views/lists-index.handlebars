
<div class="container">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
            {{> list-form}}
            {{!-- Show saved lists --}}
            <div class='list-group' id='lists'>
            {{#each lists}}
                <a href="/list/{{this._id}}" class="list-group-item list-group-item-action">
                    <h6 class="mb-2 text-muted">{{this.date}}</h6>
                    <h5 class="">{{this.title}}</h5>
                    <p class="">{{this.body}}</p>
                </a>
            {{/each}}
            </div>   
        </div>
    </div>
</div>




